#include <iostream>
using namespace std;

int main() {
    
    int a, b;
    
    for(a=1; a<=9; a++)  {
        
        for(b=1; b<=a; b++)  {
            
            cout<<"*";
        }
        
        cout<<endl;
        
    }

  cout<<"--------trangle dicrement (using for loop)------"<<endl;

  int x, y;

  for(x= 8; x>= 1; x --) 
  {
    
    for(y=1; y<=x; y++) 
    {
        
        cout<<"*";
        
    }
    cout<<endl;

}
}
