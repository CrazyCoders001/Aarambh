#include<iostream>
using namespace std;

int main() {
    
    cout<<"--------------Increasing Triangle(Using for loop)---------------"<<endl;
    
    int i,j;
    
    for(i=1; i <= 5; ++i)
    {
        for(j=1; j <= i; ++j)
        {
            cout << "*";
        }
        cout << endl;
    }
    cout << endl;
    
    cout<<"--------------Increasing Triangle(Using While loop)---------------"<<endl;
    
    int A,B;
    
    A = 1;
    while(A <=5 ){
        B = 1;
        while(B <= A){
            cout<<"*";
            B++;
            
        }
        cout<<endl;
        A++;
    }
}
