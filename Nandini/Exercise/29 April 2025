#include <iostream>
using namespace std;
int main(){


   int num1,num2;
   char arithmetic;
   // Taking input from user 
   cout<<"Enter first number:";
   cin>>num1;
   cout<<"Enter secont number:";
   cin>>num2;
   
   //Take user input to ask what operation should be performed.
   cout<<"Enter what u want to calcualte (+,-,*,/):";
   cin>> arithmetic;
   
  //use switch case to perform arithmetic operation
   switch(arithmetic){
        case '+':
       cout<<"Additiontion of two numbers:"<<num1+num2<<endl;
       break;
        case '-':
       cout<<"Subtraction of two numbers:"<<num1-num2<<endl;
       break;
       case '*':
       cout<<"Multiplication of two numbers:"<<num1*num2<<endl;
       break;
       case '/':
       if(num2!=0)
       cout<<"Division of two numbers:"<<num1/num2<<endl;
       else
       cout<<"Error Division by zero!"<<endl;
       break;
       default:
       cout<<"You select wrong operation "<<endl;
       }
   return 0;
}
